filetype plugin indent on

syntax on

set hidden
set number
set backspace=indent,eol,start
set history=1000
set showcmd
set showmode
set autoread
set scrolloff=4
set ruler
set hlsearch
set incsearch

set autoindent
set smartindent
set smarttab
set shiftwidth=2
set softtabstop=2
set tabstop=2
set expandtab

set linebreak
set foldmethod=indent
set foldnestmax=3
set foldlevel=3
set cursorline

set mouse+=a


" set backupdir=~/.vim/backups
" set directory=~/.vim/swaps
" set undodir=~/.vim/undo

nnoremap p p=`]<C-o>
nnoremap P P=`]<C-o>
